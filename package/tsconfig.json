{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"],
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "composite": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true
  }
}
